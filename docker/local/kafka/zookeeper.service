[Unit]
Description=Apache Zookeeper Server
Requires=network.target remote-fs.target
After=network.target remote-fs.target

[Service]
Type=simple
ExecStart=/opt/devel/kafka/bin/zookeeper-server-start.sh /opt/devel/kafka/config/zookeeper.properties
ExecStop=/opt/devel/kafka/bin/zookeeper-server-stop.sh
Restart=on-abnormal

[Install]
WantedBy=multi-user.target